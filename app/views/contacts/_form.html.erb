<%= form_for @contact do |f| %>
  <div class="form-group">
    <%= f.label :name %> <br>
    <%= f.text_field :name, class: 'form-control' %> <br>
  </div>
  <div class="form-group">
    <%= f.label :email %> <br>
    <%= f.email_field :email, class: 'form-control' %> <br>
  </div>
  <div class="form-group">
    <%= f.label :comment %> <br>
    <%= f.text_area :comment, class: 'form-control' %> <br>
  </div>
  <br>
  <%= f.submit 'Send', class: 'btn btn-default' %>
<% end %>
